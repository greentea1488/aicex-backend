# ===========================================
# AI TELEGRAM BOT - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3025
FRONTEND_URL=https://your-frontend-domain.com

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="mongodb://localhost:27017/ai-telegram-bot"

# ===========================================
# TELEGRAM BOT
# ===========================================
BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# JWT SECRET
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# ===========================================
# AI SERVICES API KEYS
# ===========================================

# OpenAI (ChatGPT)
OPENAI_API_KEY=your_openai_api_key_here

# Midjourney (через прокси API - например, TheNextLeg)
MIDJOURNEY_API_URL=https://api.thenextleg.io/v2
MIDJOURNEY_API_KEY=your_midjourney_proxy_api_key_here

# Kling AI (видео генерация)
KLING_API_URL=https://api.kling.ai/v1
KLING_API_KEY=your_kling_api_key_here

# Runway (видео/изображения)
RUNWAY_API_URL=https://api.runwayml.com/v1
RUNWAY_API_KEY=your_runway_api_key_here

# Freepik + Lora (изображения)
FREEPIK_API_URL=https://api.freepik.com/v1
FREEPIK_API_KEY=your_freepik_api_key_here

# ===========================================
# PAYMENT SYSTEMS (опционально)
# ===========================================
# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Sentry (опционально)
SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# ===========================================
# REDIS (для кеширования и сессий)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# WEBHOOKS
# ===========================================
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_SECRET=your_webhook_secret_here
