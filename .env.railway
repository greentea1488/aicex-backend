# =================================
# AICEX AI Bot - Railway Environment Variables
# =================================
# Copy these variables to Railway environment settings

# Application
NODE_ENV=production
PORT=3025
BASE_URL=${{RAILWAY_PUBLIC_DOMAIN}}
FRONTEND_URL=${{FRONTEND_URL}}

# Database (Railway MongoDB)
DATABASE_URL=${{DATABASE_URL}}

# Redis (Railway Redis)
REDIS_URL=${{REDIS_URL}}

# Telegram Bot
BOT_TOKEN=${{BOT_TOKEN}}
TELEGRAM_BOT_TOKEN=${{TELEGRAM_BOT_TOKEN}}

# JWT
JWT_SECRET=${{JWT_SECRET}}

# AI Services
OPENAI_API_KEY=${{OPENAI_API_KEY}}
FREEPIK_API_KEY=${{FREEPIK_API_KEY}}
MIDJOURNEY_API_KEY=${{MIDJOURNEY_API_KEY}}
RUNWAY_API_KEY=${{RUNWAY_API_KEY}}

# Payment System (Lava.top)
LAVA_API_KEY=${{LAVA_API_KEY}}
LAVA_SECRET_KEY=${{LAVA_SECRET_KEY}}
LAVA_SHOP_ID=${{LAVA_SHOP_ID}}
LAVA_API_URL=https://api.lava.ru/business

# Webhook Secret
WEBHOOK_SECRET=${{WEBHOOK_SECRET}}

# Admin Users (Telegram IDs separated by comma)
ADMIN_TELEGRAM_IDS=${{ADMIN_TELEGRAM_IDS}}

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_AI=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Features Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_ANALYTICS=true
ENABLE_CACHE=true

# Analytics
GOOGLE_ANALYTICS_ID=${{GOOGLE_ANALYTICS_ID}}
YANDEX_METRICA_ID=${{YANDEX_METRICA_ID}}

# Email (optional)
SMTP_HOST=${{SMTP_HOST}}
SMTP_PORT=587
SMTP_USER=${{SMTP_USER}}
SMTP_PASS=${{SMTP_PASS}}
FROM_EMAIL=noreply@aicex.ai

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5

# Production
DEBUG=false
ENABLE_CORS=true
TRUST_PROXY=true
