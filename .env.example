# =================================
# AICEX AI Bot - Environment Variables
# =================================

# Application
NODE_ENV=development
PORT=3025
BASE_URL=http://localhost:3025
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=mongodb://admin:password123@localhost:27017/ai-telegram-bot?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Telegram Bot
BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# JWT Authentication
# ðŸš¨ CRITICAL: Use cryptographically strong secret in production!
# Generate with: openssl rand -hex 64
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX_STRING_IN_PRODUCTION

# AI Services
OPENAI_API_KEY=your_openai_api_key
FREEPIK_API_KEY=your_freepik_api_key
MIDJOURNEY_API_KEY=your_midjourney_api_key
RUNWAY_API_KEY=your_runway_api_key

# Payment System (Lava.top)
LAVA_API_KEY=your_lava_api_key
LAVA_TOP_WEBHOOK_KEY=your_lava_webhook_api_key
LAVA_TOP_SECRET_KEY=your_lava_webhook_secret_for_signature_verification
LAVA_SHOP_ID=your_lava_shop_id
LAVA_API_URL=https://gate.lava.top

# Webhook Secret (General)
WEBHOOK_SECRET=your_webhook_secret_key

# IMPORTANT: Generate strong JWT_SECRET in production!
# Use: openssl rand -hex 64
# Or: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Admin Users (Telegram IDs separated by comma)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_AI=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Features Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_ANALYTICS=true
ENABLE_CACHE=true

# Analytics
GOOGLE_ANALYTICS_ID=
YANDEX_METRICA_ID=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@aicex.ai

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5

# Development
DEBUG=false
ENABLE_CORS=true
TRUST_PROXY=false
